<!doctype html>
<html>
<head>
  <title>Login</title>
  <link rel = "stylesheet" href = "/public/bootstrap/bootstrap-theme.min.css">
  <link rel = "stylesheet" href = "/public/bootstrap/bootstrap.min.css">
  <link rel = "stylesheet" href = "/public/css/custom.css">
  <script type = "text/javascript" src = "/public/jquery/jquery-2.1.1.min.js"> </script>
  <script type = "text/javascript" src = "/public/bootstrap/bootstrap.min.js"> </script>
  <script type = "text/javascript" src = "/public/js/email_validate.js"> </script>
  <link rel="shortcut icon" href="/public/images/favicon.png">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <style>
    body    { padding-top:80px; }
  </style>
</head>
<body>
  <div class = "header_panel">Hoopla</div>
<div class="container">

<div class="col-sm-4 col-sm-offset-4">

  <h1 class = "thin"><span class = "fa fa-user fa-1x"></span> Login</h1>

  <!-- show any messages that come back with authentication -->
  <% if (message.length > 0) { %>
    <div class="warn"><%= message %></div>
  <% } %>
  <% try { %>
  <% if (success.length > 0) { %>
    <div class="success"><%= success %></div>
  <% }} catch(err){} %>

  <!-- LOGIN FORM -->
  <form action="/login" method="post">
    <div class="form-group">
      <label>Email</label>
      <input type="text" class="form-control" name="email">
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" class="form-control" name="password">
    </div>
    <span class = "loading_button" hidden><img src = "/public/images/loading.gif"></span>
    <button type="submit" class="btn btn-warning btn-lg login_button" style = "background-color: #3498DB; border:0;">Login</button>
  </form>

  <hr>

  <p>Need an account? <a href="/signup">Signup</a></p>
  <p>Or go <a href="/">home</a>.</p>

</div>

</div>
<div class = "row"><div class = "col-xs-8 col-xs-offset-2 center">
  <div class = "footer" style = "text-align:center;color:rgb(168, 168, 168);position:relative; bottom:-150px;">Built with love at Wayfair's Hackathon 2014<br> Carter Wheatley, Emilio Mendoza, Jonathan Reyes, Justin Shiiba, and Kris Salvador</div>
</div>
</div>
</body>
</html>