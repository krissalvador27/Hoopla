<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
  <title>Signup</title>
  <link rel = "stylesheet" href = "/public/bootstrap/bootstrap-theme.min.css">
  <link rel = "stylesheet" href = "/public/bootstrap/bootstrap.min.css">
  <link rel = "stylesheet" href = "/public/css/custom.css">
  <script type = "text/javascript" src = "/public/jquery/jquery-2.1.1.min.js"> </script>
  <script type = "text/javascript" src = "/public/js/email_validate.js"> </script>
  <script type = "text/javascript" src = "/public/bootstrap/bootstrap.min.js"> </script>
  <link rel="shortcut icon" href="/public/images/favicon.png">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> 
  <style>
    body    { padding-top:80px; }
  </style>
</head>
<body>
  <div class = "header_panel">Hoopla</div>
<div class="container">

<div class="col-sm-4 col-sm-offset-4">

  <h1 class = "thin"><span class = "fa fa-pencil-square-o fa-1x"></span> Sign Up</h1>
  <% try { %>
  <% if (message[0].length == 23) { %>
    <% try { %>
  <% if (message.length > 0) { %>
    <div class="success"><%= message %></div>
  <% }} catch(err){}} else{ %>

  <% try { %>
  <% if (message.length > 0) { %>
    <div class="warning"><%= message %></div>
  <% }} catch(err){}}} catch(err){} %>
  <div class = "warn" hidden></div>
  <div class = "success" hidden></div>
    <form class = "form" action="/signup" method="post">
    <div class="form-group">
      <label>Email</label>
      <input type="text" class="form-control email_enter" name="email">
    </div>
    <div class="form-group">
      <label>New Hoopla Password</label>
      <input type="password" class="form-control password enter" name="password">
    </div>
  </form>
    <span class = "loading" hidden><img src = "/public/images/loading.gif"></span>
    <button type="submit" class="btn btn-warning btn-lg send_email" style = "background-color: #3498DB; border:0;">Sign Up</button>

  <hr>

  <p>Already have an account? <a href="/login">Login</a></p>
  <p>Or go <a href="/">home</a>.</p>

</div>

</div>
<div class = "row"><div class = "col-xs-8 col-xs-offset-2 center">
  <div class = "footer" style = "text-align:center;color:rgb(168, 168, 168);position:relative; bottom:-150px;">Built with love at Wayfair's Hackathon 2014<br> Carter Wheatley, Emilio Mendoza, Jonathan Reyes, Justin Shiiba, and Kris Salvador</div>
</div>
</div>
</body>
</html>
